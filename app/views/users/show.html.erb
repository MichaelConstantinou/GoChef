<div class="bio-page">
  <div class="chef-view">
    <h1><%= @user.name %></h1>
    <p class="bio"> <%= @user.bio %> </p>
    <div id="cuisine">
      <h2>Cuisines:</h2>
      <ul>
        <% @user.cuisines.each do |cuisine| %>
          <li><%= cuisine.food %></li>
        <% end %>
      </ul>
    </div>
    <div id="rating_bio"><%= @user.rating %></div>
    <div id="price_bio"><%= @user.price_per_head %></div>
    <div id="caters_bio"><%= @user.max_party_size %></div>
  </div>

  <div class="portrait" style="background-image:url(<%= image_path(@user.avatar) %>)"></div>
    <div id="gallery">
      <%@user.images.each do |pic| %>
        <%= image_tag(pic.picture.url) %>
      <% end %>
    </div>
  </div>

</div>
